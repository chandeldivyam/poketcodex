{
  "name": "poketcodex",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "dev": "pnpm --parallel --filter @poketcodex/backend --filter @poketcodex/web dev",
    "build": "pnpm -r --if-present --filter \"@poketcodex/*\" build",
    "lint": "pnpm -r --if-present --filter \"@poketcodex/*\" lint",
    "typecheck": "pnpm -r --if-present --filter \"@poketcodex/*\" typecheck",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "pnpm -r --if-present --filter \"@poketcodex/*\" test:unit",
    "test:integration": "pnpm -r --if-present --filter \"@poketcodex/*\" test:integration",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript-eslint": "^8.55.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
