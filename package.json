{
  "name": "poketcodex",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "dev": "bash ./scripts/run-with-env.sh pnpm --parallel --filter @poketcodex/backend --filter @poketcodex/web dev",
    "dev:backend": "bash ./scripts/run-with-env.sh pnpm --filter @poketcodex/backend dev",
    "dev:web": "bash ./scripts/run-with-env.sh pnpm --filter @poketcodex/web dev",
    "poketcodex": "bash ./scripts/poketcodex.sh",
    "longrun:up": "bash ./scripts/longrun-up.sh",
    "longrun:down": "bash ./scripts/longrun-down.sh",
    "longrun:status": "bash ./scripts/longrun-status.sh",
    "longrun:logs": "bash ./scripts/longrun-logs.sh",
    "installer:build-assets": "bash ./scripts/build-installer-assets.sh",
    "build": "pnpm -r --if-present --filter \"@poketcodex/*\" build",
    "lint": "pnpm -r --if-present --filter \"@poketcodex/*\" lint",
    "typecheck": "pnpm -r --if-present --filter \"@poketcodex/*\" typecheck",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "pnpm -r --if-present --filter \"@poketcodex/*\" test:unit",
    "test:integration": "pnpm -r --if-present --filter \"@poketcodex/*\" test:integration",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ws": "^8.18.1",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript-eslint": "^8.55.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  }
}
